upstream gitlab {
    server 127.0.0.1:8080; # Docker контейнер GitLab
}

# HTTP → HTTPS редирект
server {
    listen 80;
    server_name usn.hozomsk.ru;
    return 301 https://$server_name$request_uri;
}

# Основной сервер
server {
    listen 443 ssl http2;
    server_name usn.hozomsk.ru;

    # SSL сертификаты (используйте ваши или Let's Encrypt)
    #ssl_certificate /path/to/your/certificate.crt;
    #ssl_certificate_key /path/to/your/private.key;

    # Безопасность SSL
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512;
    ssl_prefer_server_ciphers off;

    # Проксирование HTTP
    location / {
        proxy_pass http://gitlab;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 300;
        
        # Важно для WebSocket (для живой перезагрузки и т.д.)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    # Увеличиваем размер загружаемых файлов (для CI/CD артефактов)
    client_max_body_size 1000M;
}